<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="600dp"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:paddingTop="28dp"
              android:paddingBottom="28dp"
              android:orientation="horizontal"
              android:gravity="center_vertical"
              android:id="@+id/item_picturequestion">

    <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:background="@drawable/surveyquestions_arrow"
                 android:rotation="-180"
                 android:layout_marginStart="24dp"
                 android:layout_marginEnd="24dp"
                 android:layout_gravity="center"/>

    <LinearLayout android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:layout_weight="2"
                  android:orientation="vertical">



        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_questionall_title"
                android:textAppearance="@style/Heading.Large"
                android:gravity="center_vertical"
                tools:text="What country are you from?"
                android:textSize="48sp"/>
        <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_marginTop="24dp"
                        android:layout_height="wrap_content">

        <ImageView android:layout_width="wrap_content"
                   android:layout_centerVertical="true"
                   android:layout_toEndOf="@id/spinner_questiondropdown"
                   android:layout_marginStart="-28dp"
                   android:background="@drawable/ic_all_downchevron"
                   android:layout_height="wrap_content"/>

        <Spinner
                android:layout_width="wrap_content"

                android:layout_alignParentStart="true"
                android:minWidth="140dp"
                android:layout_height="40dp"
                android:background="@drawable/spinner_background"
                android:id="@+id/spinner_questiondropdown"/>
        </RelativeLayout>

    </LinearLayout>


    <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                 android:background="@drawable/surveyquestions_arrow"
                 android:layout_marginEnd="24dp"
                 android:id="@+id/btn_questionall_next"
                 android:layout_marginStart="24dp"
                 android:layout_gravity="center|end"/>


</LinearLayout>

