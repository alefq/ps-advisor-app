<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="16dp"
    android:layout_marginEnd="24dp"
    android:layout_marginTop="24dp"
    android:background="#FDFDFD"
    card_view:cardCornerRadius="10dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/family_image"
        android:layout_width="match_parent"
        android:layout_height="144dp"
        fresco:placeholderImage="@color/fp_green" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="152dp"
        android:layout_marginLeft="16dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/family_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textAppearance="@style/CardHeading"
            tools:text="Elokda" />

        <TextView
            android:id="@+id/next_visit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignStart="@+id/family_name"
            android:layout_marginTop="24dp"
            android:paddingRight="5dp"
            android:text="Next Visit:"
            android:textAppearance="@style/Label"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/next_visit_time"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_toRightOf="@+id/next_visit"
            android:textAppearance="@style/Label"
            tools:text="3 Days"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/last_visit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="60dp"
            android:paddingRight="5dp"
            android:text="Last Visit:"
            android:textAppearance="@style/Body.Small"
            android:visibility="gone" />

        <TextView
            android:id="@+id/last_visit_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:layout_toRightOf="@+id/last_visit"
            android:text="1/7/17"
            android:textAppearance="@style/Body.Small"
            android:visibility="gone" />
    </RelativeLayout>

</android.support.v7.widget.CardView>