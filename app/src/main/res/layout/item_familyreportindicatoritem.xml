<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingStart="16dp"
              android:paddingTop="8dp"
              android:paddingBottom="8dp">
    <android.support.v7.widget.AppCompatImageView android:layout_width="40dp"
          android:layout_height="40dp"
          android:id="@+id/view_familydetail_indicatoritem_color"
          android:background="@drawable/indicatoritem_colorshape"
          android:layout_gravity="center_vertical"
    />
    <LinearLayout android:layout_width="0dp"
                  android:layout_weight="2"
                  android:layout_marginLeft="20dp"
                  android:paddingEnd="16dp"
                  android:layout_height="wrap_content"
                  android:layout_gravity="center_vertical"
                    android:orientation="vertical">
        <TextView
                tools:text="Clean Water"
                android:id="@+id/tv_familydetail_indicatoritem_title"
                android:textAppearance="@style/CardHeading"
                android:maxLines="2"
                android:ellipsize = "end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/tv_familydetail_indicatoritem_description"
                tools:text="We don't have access to a number of things"
                android:textAppearance="@style/Body.Small"
                android:maxLines="2"
                android:ellipsize = "end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>